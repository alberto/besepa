<h1>New Bank Account</h1>

<%= form_for(:bank_account, url: customer_bank_accounts_path(@customer_id)) do |f| %>
  <div class="form-group">
    <%= f.label :iban %><br>
    <%= f.text_field :iban %>
  </div>

  <div class="actions">
    <%= f.submit "Create", class: "btn btn-primary" %>
    <%= link_to 'Back', customer_path(@customer_id), class: "btn btn-lnk" %>
  </div>
<% end %>
