<h1>Nuevo cliente</h1>

<%= form_for(:customer, url: customers_path) do |f| %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :taxid %><br>
      <%= f.text_field :taxid %>
    </div>
    <div class="form-group">
      <%= f.label :reference %><br>
      <%= f.text_field :reference %>
    </div>

    <div class="form-group">
      <%= f.label :address_street %><br>
      <%= f.text_field :address_street %>
    </div>
    <div class="form-group">
      <%= f.label :address_city %><br>
      <%= f.text_field :address_city %>
    </div>
    <div class="form-group">
      <%= f.label :address_postalcode %><br>
      <%= f.text_field :address_postalcode %>
    </div>
    <div class="form-group">
      <%= f.label :address_state %><br>
      <%= f.text_field :address_state %>
    </div>
    <div class="form-group">
      <%= f.label :address_country %><br>
      <%= f.text_field :address_country %>
    </div>


    <div class="form-group">
      <%= f.label :contact_name %><br>
      <%= f.text_field :contact_name %>
    </div>
    <div class="form-group">
      <%= f.label :contact_email %><br>
      <%= f.text_field :contact_email %>
    </div>
    <div class="form-group">
      <%= f.label :contact_phone %><br>
      <%= f.text_field :contact_phone %>
    </div>

    <div class="actions">
      <%= f.submit "Crear", class: "btn btn-primary" %>
      <%= link_to 'Volver', customers_path, class: "btn btn-lnk" %>
    </div>
<% end %>
